<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/VerseNum"
        tools:layout_editor_absoluteX="158dp" />

    <TextView
        android:id="@+id/SuraNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:paddingBottom="50px"
        android:text="Enter Surah Num"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/VerseNum"
        tools:layout_editor_absoluteX="92dp" />

    <TextView
        android:id="@+id/VerseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:paddingTop="50px"
        android:paddingBottom="100px"
        android:text="Enter Para Num"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="173dp" />

</androidx.constraintlayout.widget.ConstraintLayout>